<h1>Edit product</h1>

<%= form_for @product do |f| %>
	<p>
		<%= f.label "name" %>
		<%= f.text_field "name" %>
	</p>
	<p>
		<%= f.label "description" %>
		<%= f.text_field "description" %>
	</p>
	<p>
		<%= f.label "price_in_cents" %>
		<%= f.text_field "price_in_cents" %>
	</p>
	<p>
		<%= f.submit "Update" %> 
	</p>

<% end %>
